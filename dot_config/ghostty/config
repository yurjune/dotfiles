# press cmd+shift+, to apply config

theme = Catppuccin Mocha

font-size = 10
# if -calt, disables ligature
# font-feature = -calt

# adjust text cell height => adjust line height
adjust-cell-height = 25%
cursor-style = block

macos-titlebar-style = tabs 

background-opacity = 0
background-blur = 20

shell-integration = zsh

# when you drag any text, copy it immediately
copy-on-select = clipboard

macos-option-as-alt = true

# ESC sequence is recognized as meta key in terminal
# Therefore: cmd + key => esc + key => meta + key
# For tmux usage
keybind = cmd+h=esc:h
keybind = cmd+j=esc:j  
keybind = cmd+k=esc:k
keybind = cmd+l=esc:l

# For neovim usage
keybind = cmd+a=esc:a
keybind = cmd+s=esc:s
keybind = cmd+w=esc:w
keybind = cmd+n=esc:n
keybind = cmd+shift+w=esc:W

keybind = cmd+q=close_tab
keybind = cmd+left=previous_tab
keybind = cmd+right=next_tab
keybind = ctrl+space=ignore

# for scroll
keybind = shift+page_up=scroll_page_up
keybind = shift+page_down=scroll_page_down

keybind = shift+enter=text:\n

